

<%=form_with(model: object) do |f| %>

  <%=f.label "Nome do departamento" %>
  <%=f.text_field :name %>

  <%= f.label "Gestor Responsavel" %>
  <%= f.collection_select :user_id, @managers, :id, :name, prompt: "Selecione um gerente" %>


  <% if object.new_record? %>
    <%= f.submit "Criar departamento" %>
  <% else %>
    <%= f.submit "Editar departamento" %>
  <% end %>

<% end %>